<?xml version="1.0" encoding="UTF-8"?>
<root BTCPP_format="4">
    <BehaviorTree ID="PatternSearch-start">
        <Sequence name="PatternSearchSequence">
            <!-- 1. 初始化搜索 -->
            <Sequence name="SearchInitialization">
                <LockControl state="1" result="{unlock_result}"/>

                <SetLineParameters
                        type="127"
                        antiDis="8.0"
                        vehiTypParam="vehiType"
                        spdParam="spd"
                        disParam="arvDis"
                        ptsParam="areaPoints"
                />
            </Sequence>

            <!-- 2. 模式搜索循环 -->
            <ReactiveFallback name="SearchLoop">
                <!-- 检查是否发现目标 -->
                <CheckQuitSearch/>

                <!-- 继续搜索模式 -->
                <KeepRunningUntilFailure>
                    <Sequence name="SearchPattern">
                        <!-- 设置搜索航点 -->
                        <SetDestinationPoint
                                target="{pattern_ctrl}"
                                step="2"
                                obsHgh="-30.0"
                                ptsParam="areaPoints"
                                ptTypParam="pointTag"
                        />

                        <!-- 飞向搜索点 -->
                        <ReactiveFallback>
                            <CheckArriveDestination
                                    target="{pattern_ctrl}"
                                    arvdis="8.0"
                            />
                            <Repeat num_cycles="50">
                                <Delay delay_msec="200">
                                    <OffBoardControl
                                            ctrl="{pattern_ctrl}"
                                            yaw="0.0"
                                    />
                                </Delay>
                            </Repeat>
                        </ReactiveFallback>

                        <!-- 在点位搜索 -->
                        <Delay delay_msec="3000">
                            <OffBoardControl
                                    ctrl="{pattern_ctrl}"
                                    yaw="0.0"
                            />
                        </Delay>
                    </Sequence>
                </KeepRunningUntilFailure>
            </ReactiveFallback>
        </Sequence>
    </BehaviorTree>
</root>