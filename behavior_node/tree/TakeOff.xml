<?xml version="1.0" encoding="UTF-8"?>
<root BTCPP_format="4">
    <BehaviorTree ID="TakeOff">
        <Sequence name="TakeOffSequence">
            <!-- 1. 解锁载具 -->
            <LockControl state="1" result="{unlock_result}" />

            <!-- 2. 设置起飞参数 -->
            <SetLineParameters
                    type="15"
                    antiDis="5.0"
                    vehiTypParam="vehiType"
                    spdParam="spd"
                    disParam="arvDis"
                    ptTypParam="pointTag"
                    result="{param_result}"
            />

            <!-- 3. 切换到起飞模式 -->
            <FlightModeControl
                    mode="4"
                    param7="-30.0"
                    altParam="alt"
                    result="{mode_result}"
            />

            <!-- 4. 设置起飞目标点 -->
            <SetDestinationPoint
                    step="0"
                    obsHgh="-30.0"
                    altParam="alt"
                    ptTypParam="pointTag"
                    target="{takeoff_ctrl}"
            />

            <!-- 5. 执行起飞控制循环 -->
            <ReactiveFallback name="TakeOffLoop">
                <!-- 检查是否到达起飞高度 -->
                <CheckArriveDestination
                        target="{takeoff_ctrl}"
                        arvdis="3.0"
                        onlyz="true"
                        arrived="{takeoff_arrived}"
                />
                <!-- 持续发送起飞控制指令 -->
                <KeepRunningUntilFailure>
                    <Delay delay_msec="50">
                        <OffBoardControl
                                ctrl="{takeoff_ctrl}"
                                yaw="0.0"
                                result="{control_result}"
                        />
                    </Delay>
                </KeepRunningUntilFailure>
            </ReactiveFallback>
        </Sequence>
    </BehaviorTree>
</root>