<?xml version="1.0" encoding="UTF-8"?>
<root BTCPP_format="4" main_tree_to_execute="SrchViaLine">
    <BehaviorTree ID="SrchViaLine">
        <Sequence name="SearchSequence">
            <!-- 设置搜索区域参数 -->
            <SetLineParameters ptsParam="areaPoints" spdParam="spd" disParam="arvDis" type="639" />

            <!-- 进入OFFBOARD模式 -->
            <FlightModeControl mode="9" />

            <!-- 执行导航控制 -->
            <NavigationControl />

            <!-- 持续搜索直到退出条件满足 -->
            <ReactiveFallback>
                <CheckQuitSearch />
                <KeepRunningUntilFailure>
                    <NavigationControl />
                </KeepRunningUntilFailure>
            </ReactiveFallback>
        </Sequence>
    </BehaviorTree>
</root>