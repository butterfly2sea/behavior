<root BTCPP_format="4"> 

     <BehaviorTree ID="KeepRunTree">
        <KeepRunningUntilFailure>
            <ForceSuccess>
		        <Delay delay_msec="3000">
			        <Script code=" A:=1; B:=3.14 " />
		        </Delay>
	        </ForceSuccess>
	</KeepRunningUntilFailure>
    </BehaviorTree>

    <BehaviorTree ID="EnterOffboardTree">
        <SequenceWithMemory>
            <LockCtrl state="1" />
            <GetLocation target="{ctrl_info}" zoffset="0"/>
            <Delay delay_msec="30">
                <Sequence>
                    <OffboardCtrl ctrl="{ctrl_info}"/>
                    <FlightmodeCtrl mode="9" />
                </Sequence>
            </Delay>
        </SequenceWithMemory>
    </BehaviorTree>

    <BehaviorTree ID="LandTree">
        <SequenceWithMemory>

        <GetLocation />
        <FlightmodeCtrl mode="5" />
        <ForceSuccess>
            <NavwayCtrl frame="1" command="3"/>
        </ForceSuccess>
        <ForceSuccess>
            <TraceAttackCtrl frame="1" command="3" />
        </ForceSuccess>
        <SubTree ID="KeepRunTree" />
        </SequenceWithMemory>
    </BehaviorTree>

    <BehaviorTree ID="RTLTree">
       <SequenceWithMemory>
       <SetTriggers delay="{time_info}" /> 
         
       <FlightmodeCtrl mode="6" />  

       <Delay delay_msec="{time_info}">
           <FlightmodeCtrl mode="8" />
       </Delay>
     
         <ForceSuccess>
            <NavwayCtrl frame="1" command="3"/>
        </ForceSuccess>
        <ForceSuccess>
            <TraceAttackCtrl frame="1" command="3" />
        </ForceSuccess>
        <SubTree ID="KeepRunTree" />
        </SequenceWithMemory> 
    </BehaviorTree>

    <BehaviorTree ID="LoitTree">
        <SequenceWithMemory>
        <ForceSuccess>
            <NavwayCtrl frame="1" command="3"/>
        </ForceSuccess>
        <ForceSuccess>
            <TraceAttackCtrl frame="1" command="3" />
        </ForceSuccess>
       
         <SubTree ID="EnterOffboardTree" />
            <GetLocation target="{ctrl_info}" zoffset="0"/>
            <KeepRunningUntilFailure>
                <Delay delay_msec="30">
                    <OffboardCtrl ctrl="{ctrl_info}"/>
                </Delay>
            </KeepRunningUntilFailure>
        </SequenceWithMemory>      
    </BehaviorTree>


    <BehaviorTree ID="TakeoffTree">
    <SequenceWithMemory>
    	<ForceSuccess>
            <NavwayCtrl frame="1" command="3"/>
        </ForceSuccess>
        <ForceSuccess>
            <TraceAttackCtrl frame="1" command="3" />
        </ForceSuccess>
    	<SubTree ID="EnterOffboardTree" />
	<GetLocation target="{ctrl_info}" fixed="{takeoff_z}"/>

	<KeepRunningUntilFailure>
		<Delay delay_msec="30">
			<OffboardCtrl ctrl="{ctrl_info}"/>
		</Delay>
	</KeepRunningUntilFailure>

    </SequenceWithMemory>    
    </BehaviorTree>

    <BehaviorTree ID="TakeOff-cmd">
    <SequenceWithMemory>
        <SubTree ID="TakeoffTree"  _autoremap="true" takeoff_z="-1"/>
    </SequenceWithMemory>  
    </BehaviorTree>

    <BehaviorTree ID="TakeOff-start">
    <SequenceWithMemory>
        <SubTree ID="TakeoffTree" />
    </SequenceWithMemory>  
    </BehaviorTree>

    <BehaviorTree ID="TakeOff-pause">
    <SequenceWithMemory>
        <SubTree ID="LoitTree" />
    </SequenceWithMemory>  
    </BehaviorTree>

    <BehaviorTree ID="TakeOff-continue">
    <SequenceWithMemory>
        <SubTree ID="TakeoffTree" />
    </SequenceWithMemory>  
    </BehaviorTree>

    <BehaviorTree ID="TakeOff-stop">
    <SequenceWithMemory>
        <SubTree ID="LandTree" />
    </SequenceWithMemory>  
    </BehaviorTree>

    <BehaviorTree ID="Loiter-cmd">
    <SequenceWithMemory>
        <SubTree ID="LoitTree" />
    </SequenceWithMemory>  
    </BehaviorTree>

    <BehaviorTree ID="Loiter-start">
    <SequenceWithMemory>
        <SubTree ID="LoitTree" />
    </SequenceWithMemory>  
    </BehaviorTree>

    <BehaviorTree ID="Loiter-pause">
    <SequenceWithMemory>
        <SubTree ID="LandTree" />
    </SequenceWithMemory>  
    </BehaviorTree>

    <BehaviorTree ID="Loiter-continue">
    <SequenceWithMemory>
        <SubTree ID="LoitTree" />
    </SequenceWithMemory>  
    </BehaviorTree>

    <BehaviorTree ID="Loiter-stop">
    <SequenceWithMemory>
        <SubTree ID="LandTree" />
    </SequenceWithMemory>  
    </BehaviorTree>

    <BehaviorTree ID="Land-start">
    <SequenceWithMemory>
        <SubTree ID="LandTree" />
    </SequenceWithMemory>  
    </BehaviorTree>

    <BehaviorTree ID="Land-pause">
    <SequenceWithMemory>
        <SubTree ID="LoitTree" />
    </SequenceWithMemory>  
    </BehaviorTree>

    <BehaviorTree ID="Land-continue">
    <SequenceWithMemory>
        <SubTree ID="LandTree" />
    </SequenceWithMemory>  
    </BehaviorTree>

    <BehaviorTree ID="Land-stop">
    <SequenceWithMemory>
        <SubTree ID="LoitTree" />
    </SequenceWithMemory>  
    </BehaviorTree>

    <BehaviorTree ID="RtlDirect-start">
    <SequenceWithMemory>
        <SubTree ID="RTLTree" />
    </SequenceWithMemory>  
    </BehaviorTree>

    <BehaviorTree ID="RtlDirect-pause">
    <SequenceWithMemory>
        <SubTree ID="LoitTree" />
    </SequenceWithMemory>  
    </BehaviorTree>

    <BehaviorTree ID="RtlDirect-continue">
    <SequenceWithMemory>
        <SubTree ID="RTLTree" />
    </SequenceWithMemory>  
    </BehaviorTree>

    <BehaviorTree ID="RtlDirect-stop">
    <SequenceWithMemory>
        <SubTree ID="LoitTree" />
    </SequenceWithMemory>  
    </BehaviorTree>



</root>
